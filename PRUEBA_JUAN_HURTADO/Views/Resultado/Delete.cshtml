@model PRUEBA_JUAN_HURTADO.Models.Resultado

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Participante</h1>

<h3 class="mt-5">¿Seguro que quiere eliminar el siguiente participante?</h3>
<div>
    <hr/>
    <div class="container mt-4">
        <dl class="row mt-3">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pais)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pais)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Arranque)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Arranque)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Envio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Envio)
            </dd>

        </dl>
    </div>
    
    
    <form asp-action="Delete"class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
