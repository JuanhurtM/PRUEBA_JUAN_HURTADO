@model PRUEBA_JUAN_HURTADO.Models.Resultado

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Registro</h1>

<hr />
<div class="row mt-3">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-3">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Pais" class="control-label"></label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Arranque" class="control-label"></label>
                <input asp-for="Arranque" class="form-control" />
                <span asp-validation-for="Arranque" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Envio" class="control-label"></label>
                <input asp-for="Envio" class="form-control" />
                <span asp-validation-for="Envio" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Editar" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary mt-2" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
